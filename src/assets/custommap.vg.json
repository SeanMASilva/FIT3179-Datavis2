{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "width":800,
  "height":600,
  "projection": {"type":"azimuthalEqualArea", "rotate":[-133.5,20,0], "scale": 700},
  "layer": [
    {
      "data": {
        "url": "https://raw.githubusercontent.com/SeanMASilva/FIT3179-Datavis2/refs/heads/main/src/assets/baseWorldLarger.json",
        "format": {"type": "topojson", "feature": "ne_50m_land"}
      },
      "mark": {"type": "geoshape", "fill": "lightgrey", "stroke": "white"}
    },
    {
      "data": {
        "url": "https://raw.githubusercontent.com/SeanMASilva/FIT3179-Datavis2/refs/heads/main/src/assets/baseWorldLarger.json",
        "format": {"type": "topojson", "feature": "ne_50m_ocean"}
      },
      "mark": {"type": "geoshape", "fill": "lightblue"}
    },
    {
      "data": {
        "url": "https://raw.githubusercontent.com/SeanMASilva/FIT3179-Datavis2/refs/heads/main/src/assets/baseWorldLarger.json",
        "format": {"type": "topojson", "feature": "ne_50m_admin_1_states_provinces_lines"}
      },
      "mark": {"type": "geoshape", "fill":"","stroke":"white"}
    },
    
    {
      "data": {
        "url": "https://raw.githubusercontent.com/SeanMASilva/FIT3179-Datavis2/refs/heads/main/src/assets/IDCKMSTM0SFiltered.csv"
      },
      "mark": {"type": "circle"},
      "encoding": {
        "longitude": {"field":"LON", "type": "quantitative"},
        "latitude": {"field":"LAT", "type": "quantitative"},
        "size": {"field":"MAX_WIND_SPD", "type": "quantitative"}
      },
      "transform": [
        {"filter": "datum.TM < \"2010\""}
      ]
    }
  ]
}
